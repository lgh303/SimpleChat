<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cn.thu.guohao.simplechat.ui.ProfileActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_iv_profile_photo"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_tv_profile_nickname"
                android:text="Nickname"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/id_iv_profile_sex"
                android:layout_toRightOf="@id/id_tv_profile_nickname"
                android:src="@drawable/profile_man"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/id_tv_profile_username"
                android:paddingTop="10dp"
                android:layout_below="@id/id_tv_profile_nickname"
                android:text="@string/prefix_id"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/id_bt_profile_message"
        android:layout_margin="20dp"
        android:background="@drawable/selector_button_blue"
        android:layout_gravity="center"
        android:text="@string/hint_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
