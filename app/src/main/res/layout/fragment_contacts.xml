<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.thu.guohao.simplechat.fragment.ContactsFragment">

    <RelativeLayout
        android:id="@+id/id_rl_frag_contact_invite"
        android:padding="20dp"
        android:background="@color/light_purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/friends_invitations"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_tv_frag_contact_red_point"
            android:visibility="invisible"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_point"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/id_lv_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>
